@model IEnumerable<AtlasAddressBook.Models.Contact>
@using AtlasAddressBook.Services.Interfaces
@inject IImageService _imageService


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row row-cols-md-2">
    @foreach (var item in Model!)
    {
        <div class="col-12 gy-3">
            <div class="glass-jw-style darkGlass p-2 h-100">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@_imageService.ConvertByteArrayToFile(item?.ImageData,item?.ImageType)" class="contactList-image rounded-3" alt="..." />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body ms-1">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                            <div class="card-text">
                                Email: @Html.DisplayFor(modelItem => item.Email)
                            </div>
                            <div class="card-text">
                                Phone: @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </div>
                            <a asp-action="Edit" asp-route-id="@item?.Id">
                                <i class="bi-pencil-fill" style="font-size: 1.5rem; color:white;"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item?.Id">
                                <i class="bi-person-fill" style="font-size: 1.5rem; color:white;"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item?.Id">
                                <i class="bi-trash-fill" style="font-size: 1.5rem; color:red;"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


